<Window x:Class="GrpcChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GrpcChatClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Enter your Username:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtUsername" Width="200" Height="30"/>
            <Button Content="Login" Click="BtnLogin_Click" Width="100" Height="30" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
